<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Grupp7</title>

    <link rel="icon" type="images/x-icon" href="/favicon.png">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Outfit:wght@100..900&display=swap"
        rel="stylesheet">

    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/JensensWebApp.styles.css" asp-append-version="true" /> *@
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <ul class="navbar-nav flex-grow-1">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img
                            src="~/images/logo.png" alt="Grupp7" width="55" /></a>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">PRIVACY</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="menu">
        <ul class="menu-list">
            <li class="menu-item">
                <a>Idrott</a>
                <a>Idrott</a>
                <a>Idrott</a>
                <a>Idrott</a>
            </li>
        </ul>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" alt="Grupp7" width="40"/></a>
            &nbsp;&nbsp;&nbsp;
            &copy; 2024  -  JensensWebApp  -  <a asp-area="" asp-controller="Home" asp-action="Privacy">PRIVACY</a>
            <button onclick="topFunction()" id="topBtn" title="Go to top">↑</button>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true" defer></script>
    <script src="~/js/footer.js" asp-append-version="true" defer></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
